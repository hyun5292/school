import java.awt.*;
import javax.swing.*;
import java.awt.event.*;

public class num6 extends JFrame {
	public num6() {
		setTitle("버블 게임");
	      setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
	      
	      GamePanel p = new GamePanel();
	      setContentPane(p);
	      setSize(1000,1000);   
	      setVisible(true);
	}

	public static void main(String[] args) {
		new num6();
	}
}

class GamePanel extends JPanel {
	   public GamePanel() {
	      setLayout(null);
	      addMouseListener(new MouseAdapter() {
	         public void mousePressed(MouseEvent e) {
	            BubbleThread bubbleThread = new BubbleThread(e.getX(), e.getY());
	            bubbleThread.start();
	         }
	      });
	   }
	   
	   class BubbleThread extends Thread {
	      JLabel bubble;
	      public BubbleThread(int bubbleX, int bubbleY) {
	         ImageIcon img = new ImageIcon("images/bubble.jpg");
	         bubble = new JLabel(img);
	         bubble.setSize(20, 20);
	         bubble.setLocation(bubbleX, bubbleY);
	         add(bubble); // GamePanel에 add()
	         repaint();
	      }
	      
	      public void run() {
	         while(true) {
	            int x = bubble.getX() ;
	            int y = bubble.getY() - 5;
	            if(y < 0) {
	               remove(bubble);
	               repaint();
	               return; // thread ends
	            }
	            bubble.setLocation(x, y);
	            repaint();
	            try {
	               sleep(20);
	            }
	            catch(InterruptedException e) {}
	         }
	      }
	   }
	}